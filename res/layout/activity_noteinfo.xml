<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/actionbar_title"
        android:layout_height="@dimen/action_bar_height"
        layout="@layout/actionbar_titleback" />

    <TextView
        android:id="@+id/tv_noteinfo_notetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="【android和php开发最佳实践】"
        android:textColor="@color/listitem_black"
        android:textSize="@dimen/text_size_17"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_noteinfo_noteauthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="独步清风" />

        <TextView
            android:layout_width="7dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布于" />

        <TextView
            android:id="@+id/tv_noteinfo_notetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里是时间" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论：" />

        <TextView
            android:layout_width="7dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_noteinfo_notecommentcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_noteinfo_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="@dimen/text_size_17" />

</LinearLayout>